<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="dataModel"
                type="com.ayteneve93.apexexplorer.data.FileModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_file_video"
                android:id="@+id/item_file_icon" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@{dataModel.title}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_file_title"
                app:layout_constraintTop_toTopOf="@+id/item_file_icon" app:layout_constraintStart_toEndOf="@+id/item_file_icon"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/item_file_favorite"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="10.00 KB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_file_size"
                app:layout_constraintBottom_toBottomOf="@+id/item_file_icon"
                app:layout_constraintStart_toStartOf="@+id/item_file_title"/>
        <TextView
                android:text="2019년 5월 09일 오후 6:25:11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_file_date"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/shape_star"
                android:layout_marginEnd="8dp"
                android:id="@+id/item_file_favorite" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/hr_gl_half">

        </FrameLayout>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/hr_gl_half"
                                                    app:layout_constraintGuide_percent="@fraction/half"
                                                    android:orientation="horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>